import sys
import subprocess

def run(flag):
    '''Carry out the process of launching the requested application. This is the
    first function called when the program is run in the terminal.'''
    insertion = {
        0 : 'chromium --incognito',
        1 : 'pcmanfm /home/jdcrecomendable/Dropbox',
        2 : 'firefox --private-window',
        3 : 'thunderbird',
        4 : 'redshift',
        5 : 'cd /home/jdcrecomendable/bin/tor-browser_en-US && ./start-tor-browser.desktop',
        6 : 'cd /home/jdcrecomendable/bin/arduino-1.8.7 && ./arduino',
        7 : 'cd /home/jdcrecomendable/bin/fritzing-0.9.3b.linux.AMD64 && ./Fritzing',
        8 : '"/home/jdcrecomendable/bin/android-studio/bin/studio.sh" %f',
        9 : '"/home/jdcrecomendable/Qt/Tools/QtCreator/bin/qtcreator"',
        10: 'cd /home/jdcrecomendable/bin/etcher-electron-1.4.5-x86_64 && ./etcher-electron-1.4.5-x86_64.AppImage',
        11: 'cd /home/jdcrecomendable/bin/SynfigStudio-1.2.2-18.09.14-linux64-286f1 && ./SynfigStudio-1.2.2-18.09.14-linux64-286f1.appimage',
        12: 'cd /home/jdcrecomendable/bin/eagle-9.2.0 && ./run',
        13: 'jupyter-notebook --no-browser'
    }
    try:
        to_run = insertion[flag]
        subprocess.run(['bash', '-c', to_run])
    except KeyError:
        show_help()

def show_help():
    '''Show the help documentation for the program.'''
    help_doc = '''Usage: launch [options]

Options:
  android-studio  launch Android Studio
  arduino         launch Arduino IDE
  chromium        launch Chromium in incognito mode
  dropbox         launch PCManFM with ~/Dropbox open
  eagle           launch Autodesk Eagle
  etcher          launch Etcher
  firefox         launch Firefox in a Private Window
  fritzing        launch Fritzing
  jupyter         launch Jupyter Notebook without a browser
  mail            launch Thunderbird
  qt-creator      launch Qt Creator
  redshift        launch Redshift
  synfig          launch Synfig Studio
  tor             launch Tor Browser'''
    print(help_doc)

if __name__ == '__main__':
    if len(sys.argv) == 2:
        options = {
            'chrome'          :  0,
            'chromium'        :  0,
            'dropbox'         :  1,
            'firefox'         :  2,
            'mail'            :  3,
            'redshift'        :  4,
            'tor'             :  5,
            'arduino'         :  6,
            'fritzing'        :  7,
            'android-studio'  :  8,
            'qt-creator'      :  9,
            'etcher'          : 10,
            'synfig'          : 11,
            'eagle'           : 12,
            'jupyter'         : 13
        }
        try:
            run(options[sys.argv[1]])
        except KeyError:
            show_help()
    else:
        show_help()
