# set up scratchpad
for_window [title="__scratchpad"] move scratchpad
exec --no-startup-id lxterminal -t "__scratchpad"
bindsym $mod+Control+space move scratchpad
bindsym $mod+Mod1+space scratchpad show

# setting gaps between windows
for_window [class=".*"] border pixel 4
hide_edge_borders both
set $mode_gaps_inner [Left Arrow Key]: Decrease Gap | [Right Arrow Key]: Increase Gap | [Up Arrow Key]: Reset | [Down Arrow Key]: No Gap
bindsym $mod+g mode "$mode_gaps_inner"
mode "$mode_gaps_inner" {
        bindsym Right  gaps inner all plus 4
        bindsym Left   gaps inner all minus 4
        bindsym Up     gaps inner all set 40
        bindsym Down   gaps inner all set 0

        bindsym $mod+g mode "default"
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
